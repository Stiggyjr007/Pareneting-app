<body>
  <h1>ðŸ‘¶ Baby App AI</h1>
  <div class="chat-box" id="chatBox">
    <div class="chat-entry">
      <div class="ai"><strong>Baby App AI:</strong> Hi! Ask me anything about newborn care, sleep, feeding, or safety.</div>
    </div>
  </div>

  <input type="text" id="questionInput" placeholder="Type your baby question here..." />
  <button onclick="askQuestion()">Ask</button>

  <script>
    function askQuestion() {
      const input = document.getElementById('questionInput');
      const chatBox = document.getElementById('chatBox');
      const question = input.value.trim();

      if (!question) return;

      const entry = document.createElement('div');
      entry.className = 'chat-entry';
      entry.innerHTML = `<div class="user">You: ${question}</div>`;
      chatBox.appendChild(entry);

      // Simulated AI response
      const response = getBabyAnswer(question);
      const aiReply = document.createElement('div');
      aiReply.className = 'ai';
      aiReply.innerHTML = `<strong>Baby App AI:</strong> ${response}`;
      entry.appendChild(aiReply);

      input.value = '';
      input.focus();
    }

    function getBabyAnswer(q) {
      q = q.toLowerCase();
      if (q.includes("feed") || q.includes("hungry")) {
        return "Newborns typically feed every 2 to 3 hours. Watch for hunger cues like rooting or sucking on hands.";
      }
      if (q.includes("sleep")) {
        return "Newborns sleep about 14â€“17 hours a day, in short bursts. It's normal for them to wake up often.";
      }
      if (q.includes("poop") || q.includes("diaper")) {
        return "A healthy newborn may have several poops per day. Breastfed babies may poop less often â€” both can be normal!";
      }
      if (q.includes("crying")) {
        return "Crying is normal, but if it's constant or high-pitched, check for discomfort, gas, or temperature. Trust your gut and contact your doctor if you're unsure.";
      }
      if (q.includes("bath")) {
        return "You can sponge bathe your baby until the umbilical cord falls off. After that, 2-3 times a week is usually enough.";
      }

      return "That's a great question! Make sure it's baby- or newborn-related. I'm here to help with anything from feeding and sleep to safety and growth.";
    }
  </script>
